<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sample.routerdemo">

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".business.controller.MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".business.controller.FirstActivity" />
        <activity android:name=".business.controller.SecondActivity" />
        <activity android:name=".business.controller.ThirdActivity" />
        <activity android:name=".business.controller.FourthActivity" />
        <activity android:name=".business.controller.FifthActivity"></activity>
    </application>

</manifest>